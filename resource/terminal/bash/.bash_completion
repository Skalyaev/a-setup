#!/bin/bash

_note(){
    local path="$HOME/.local/share/notes"
    [[ -r "$path" ]] || return

    local cur="${COMP_WORDS[COMP_CWORD]}"
    cur="${cur//$path\//}"
    COMPREPLY=($(compgen -f "$path/$cur"))
}
complete -o nospace -o filenames -F _note n
complete -o nospace -o filenames -F _note note


# Begin added by argcomplete
source "/home/skalya/.local/share/pyenv/lib/python3.11/site-packages/argcomplete/bash_completion.d/_python-argcomplete"
# End added by argcomplete
