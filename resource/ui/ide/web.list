$- INSTALL
git clone $src .
dir=$HOME/.local
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/bin
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share/man
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
