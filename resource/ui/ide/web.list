$- INSTALL
git clone $src .
sed -i 's/#CONF_OPT_PYTHON = --enable-pythoninterp$/CONF_OPT_PYTHON = --enable-pythoninterp/g' src/Makefile
sed -i 's/#CONF_OPT_PYTHON3 = --enable-python3interp$/CONF_OPT_PYTHON3 = --enable-python3interp/g' src/Makefile
dir=$HOME/.local
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/bin
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share/man
if [ ! -e $dir ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
./configure --prefix=$HOME/.local
make
make install
make reconfig
make clean
curl -kfLo $HOME/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
mkdir -p $HOME/.vim/plugged
git clone https://github.com/Skalyaeve/a-vim-theme.git $HOME/.vim/plugged/a-vim-theme
chown -R $USER:$USER $HOME/.vim
chown -R $USER:$USER $HOME/.local/share/vim
chown -R $USER:$USER $HOME/.local/share/man
dir=$HOME/.local/bin
chown $USER:$USER $dir/vim
chown $USER:$USER $dir/vimtutor
chown $USER:$USER $dir/xxd
chown -h $USER:$USER $dir/vimdiff
chown -h $USER:$USER $dir/rvim
chown -h $USER:$USER $dir/rview
chown -h $USER:$USER $dir/view
chown -h $USER:$USER $dir/ex
chown $USER:$USER *
chown $USER:$USER .*
$---

$- UPDATE
make distclean
make clean
git pull
chown $USER:$USER *
chown $USER:$USER .*
sed -i 's/#CONF_OPT_PYTHON = --enable-pythoninterp$/CONF_OPT_PYTHON = --enable-pythoninterp/g' src/Makefile
sed -i 's/#CONF_OPT_PYTHON3 = --enable-python3interp$/CONF_OPT_PYTHON3 = --enable-python3interp/g' src/Makefile
./configure --prefix=$HOME/.local
make
make install
make reconfig
make clean
$---

$- REMOVE
./configure --prefix=$HOME/.local
make uninstall
rm -rf $HOME/.vim
$---

