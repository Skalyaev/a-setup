font @ https://github.com/ryanoasis/nerd-fonts/releases/download/v3.1.1/Terminus.zip ~ Font

$- INSTALL
curl -L $src -o Terminus.zip
unzip Terminus.zip
rm -f Terminus.zip
chown $USER:$USER *
dir=$HOME/.local
if [ ! -e $dir -a -z $NO_BACKUP ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share
if [ ! -e $dir -a -z $NO_BACKUP ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
dir=$HOME/.local/share/fonts
if [ ! -e $dir -a -z $NO_BACKUP ]; then echo "add:$dir" >> $BACKUP/diff; fi
if [ ! -e $dir ]; then mkdir $dir && chown $USER:$USER $dir; fi
mv *.ttf $dir
fc-cache -f -v
$---

$- UPDATE
curl -L $src -o Terminus.zip
unzip Terminus.zip
rm -f Terminus.zip
chown $USER:$USER *
mv *.ttf $HOME/.local/share/fonts
fc-cache -f -v
$---

$- REMOVE
dir=$HOME/.local/share/fonts
if [ ! -e $dir ]; then exit 0; fi
files=$(find $dir -type f -name TerminessNerdFont*)
if [ -n $files ]; then rm $files; fi
fc-cache -f -v
$---

@@@@


