#!/bin/bash
sudo pacman -Syu --noconfirm
pkgfile -u

ORPHANS="$(pacman -Qdtq)"
[[ -n "$ORPHANS" ]] && sudo pacman -Rns "$ORPHANS" --noconfirm

pip install --upgrade pip
pip list --outdated |
    tail -n+3 |
    grep -v "notice" |
    cut -d'=' -f1 |
    xargs pip install --upgrade

GIT_DIR="/usr/local/src/github"
while read DIR; do

    cd "$(dirname "$DIR")" || continue

    git fetch || continue
    if git status | grep -q 'git pull'; then git pull || continue; fi

    ./.install.sh

done < <(find "$1" -maxdepth "1" -mindepth "1" -type "d" -name ".git")

rmshit
